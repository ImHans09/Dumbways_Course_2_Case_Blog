generator client {
  provider = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define User model for users table in database
model User {
  @@map(name: "users")

  id            Int       @id                           @default(autoincrement())
  email         String    @unique                       @db.VarChar(300)
  name          String    @db.VarChar(300)
  password      String    @db.VarChar(16)
  createdAt     DateTime  @map(name: "created_at")      @default(now())   @db.Timestamp(4)
  updatedAt     DateTime  @map(name: "updated_at")      @default(now())   @db.Timestamp(4)
  posts         Post[]
}

// Define Post model for posts table in database
model Post {
  @@map(name: "posts")

  id            Int       @id                           @default(autoincrement())
  authorEmail   String    @map(name: "author_email")    @db.VarChar(300)
  title         String    @db.VarChar(300)
  content       String
  createdAt     DateTime  @map(name: "created_at")      @default(now())   @db.Timestamp(4)
  updatedAt     DateTime  @map(name: "updated_at")      @default(now())   @db.Timestamp(4)
  author        User      @relation(fields: [authorEmail], references: [email])
}